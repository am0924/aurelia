kind: Relationship
version: v1
definition:
  name: customer_sent_transfers
  sourceType: public_customers
  description: |
    Links a customer to all transactions where they are the sender.
    Used to evaluate outbound financial behavior.
    Relationship: 1 (public_customers) → M (public_financial_transfers)
  target:
    model:
      name: public_financial_transfers
      relationshipType: Array
  mapping:
